<% architect_authorities = Hyrax::ArchitectAuthorities.new %>
<fieldset class="bordered form-group">
<%= f.input key,
  as: :controlled_vocabulary,
  placeholder: 'Search for an architect',
  input_html: {
    class: 'form-control',
    data: {
      'autocomplete-url' => "/authorities/search/getty/ulan",
      'autocomplete' => key
    }
  },
  ### Required for the ControlledVocabulary javascript:
  wrapper_html: {
    data: {
      'autocomplete-url' => "/authorities/search/getty/ulan",
      'field-name' => key
    }
  },
  required: f.object.required?(key) %>

  <label>Authority for Architect</label>

<%= select_tag "architect_authorities",
        options_for_select(architect_authorities.select_active_options),
        class: 'form-control image_architect',
        data: {
          'authority-select' => "image_architect",
          'uses-controlled-vocab' => true
        },
        prompt: t('hyrax.records.edit_fields.architect.prompt')
  %>
</fieldset>
