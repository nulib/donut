<% screenwriter_authorities = Hyrax::ScreenwriterAuthorities.new %>
<fieldset class="bordered form-group">
<%= f.input key,
  as: :controlled_vocabulary,
  placeholder: 'Search for a screenwriter',
  input_html: {
    class: 'form-control',
    data: {
      'autocomplete-url' => "/authorities/search/getty/ulan",
      'autocomplete' => key
    }
  },
  ### Required for the ControlledVocabulary javascript:
  wrapper_html: {
    data: {
      'autocomplete-url' => "/authorities/search/getty/ulan",
      'field-name' => key
    }
  },
  required: f.object.required?(key) %>

  <label>Authority for Screenwriter</label>

<%= select_tag "screenwriter_authorities",
        options_for_select(screenwriter_authorities.select_active_options),
        class: 'form-control image_screenwriter',
        data: {
          'authority-select' => "image_screenwriter",
          'uses-controlled-vocab' => true
        },
        prompt: t('hyrax.records.edit_fields.screenwriter.prompt')
  %>
</fieldset>
