<% transcriber_authorities = Hyrax::TranscriberAuthorities.new %>
<fieldset class="bordered form-group">
<%= f.input key,
  as: :controlled_vocabulary,
  placeholder: 'Search for a transcriber',
  input_html: {
    class: 'form-control',
    data: {
      'autocomplete-url' => "/authorities/search/getty/ulan",
      'autocomplete' => key
    }
  },
  ### Required for the ControlledVocabulary javascript:
  wrapper_html: {
    data: {
      'autocomplete-url' => "/authorities/search/getty/ulan",
      'field-name' => key
    }
  },
  required: f.object.required?(key) %>

  <label>Authority for Transcriber</label>

<%= select_tag "transcriber_authorities",
        options_for_select(transcriber_authorities.select_active_options),
        class: 'form-control image_transcriber',
        data: {
          'authority-select' => "image_transcriber",
          'uses-controlled-vocab' => true
        },
        prompt: t('hyrax.records.edit_fields.transcriber.prompt')
  %>
</fieldset>
