<% donor_authorities = Hyrax::DonorAuthorities.new %>
<fieldset class="bordered form-group">
<%= f.input key,
  as: :controlled_vocabulary,
  placeholder: 'Search for a donor',
  input_html: {
    class: 'form-control',
    data: {
      'autocomplete-url' => "/authorities/search/getty/ulan",
      'autocomplete' => key
    }
  },
  ### Required for the ControlledVocabulary javascript:
  wrapper_html: {
    data: {
      'autocomplete-url' => "/authorities/search/getty/ulan",
      'field-name' => key
    }
  },
  required: f.object.required?(key) %>

  <label>Authority for Donor</label>

<%= select_tag "donor_authorities",
        options_for_select(donor_authorities.select_active_options),
        class: 'form-control image_donor',
        data: {
          'authority-select' => "image_donor",
          'uses-controlled-vocab' => true
        },
        prompt: t('hyrax.records.edit_fields.donor.prompt')
  %>
</fieldset>
