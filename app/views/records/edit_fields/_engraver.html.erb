<% engraver_authorities = Hyrax::EngraverAuthorities.new %>
<fieldset class="bordered form-group">
<%= f.input key,
  as: :controlled_vocabulary,
  placeholder: 'Search for an engraver',
  input_html: {
    class: 'form-control',
    data: {
      'autocomplete-url' => "/authorities/search/getty/ulan",
      'autocomplete' => key
    }
  },
  ### Required for the ControlledVocabulary javascript:
  wrapper_html: {
    data: {
      'autocomplete-url' => "/authorities/search/getty/ulan",
      'field-name' => key
    }
  },
  required: f.object.required?(key) %>

  <label>Authority for Engraver</label>

<%= select_tag "engraver_authorities",
        options_for_select(engraver_authorities.select_active_options),
        class: 'form-control image_engraver',
        data: {
          'authority-select' => "image_engraver",
          'uses-controlled-vocab' => true
        },
        prompt: t('hyrax.records.edit_fields.engraver.prompt')
  %>
</fieldset>
