<% contributor_authorities = Hyrax::ContributorAuthorities.new %>

<%=
  f.input key,
  as: :multi_value,
  input_html: {
    class: 'form-control',
    data: { 'autocomplete-url' => "/authorities/search/loc/names",
      'autocomplete' => key }
  } ,
  required: f.object.required?(key) %>

<%= label_tag('contributor_authorities',
              t('hyrax.records.edit_fields.contributor.label'))
%>

<%= select_tag "contributor_authorities",
                options_for_select(contributor_authorities.select_active_options),
                class: 'form-control image_contributor',
                data: { 'authority-select' => "image_contributor" },
                prompt: t('hyrax.records.edit_fields.contributor.prompt')
%>
