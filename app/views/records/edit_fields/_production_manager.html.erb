<% production_manager_authorities = Hyrax::ProductionManagerAuthorities.new %>
<fieldset class="bordered form-group">
<%= f.input key,
  as: :controlled_vocabulary,
  placeholder: 'Search for a production_manager',
  input_html: {
    class: 'form-control',
    data: {
      'autocomplete-url' => "/authorities/search/getty/ulan",
      'autocomplete' => key
    }
  },
  ### Required for the ControlledVocabulary javascript:
  wrapper_html: {
    data: {
      'autocomplete-url' => "/authorities/search/getty/ulan",
      'field-name' => key
    }
  },
  required: f.object.required?(key) %>

  <label>Authority for Production Manager</label>

<%= select_tag "production_manager_authorities",
        options_for_select(production_manager_authorities.select_active_options),
        class: 'form-control image_production_manager',
        data: {
          'authority-select' => "image_production_manager",
          'uses-controlled-vocab' => true
        },
        prompt: t('hyrax.records.edit_fields.production_manager.prompt')
  %>
</fieldset>
