<% performer_authorities = Hyrax::PerformerAuthorities.new %>
<fieldset class="bordered form-group">
<%= f.input key,
  as: :controlled_vocabulary,
  placeholder: 'Search for a performer',
  input_html: {
    class: 'form-control',
    data: {
      'autocomplete-url' => "/authorities/search/getty/ulan",
      'autocomplete' => key
    }
  },
  ### Required for the ControlledVocabulary javascript:
  wrapper_html: {
    data: {
      'autocomplete-url' => "/authorities/search/getty/ulan",
      'field-name' => key
    }
  },
  required: f.object.required?(key) %>

  <label>Authority for Performer</label>

<%= select_tag "performer_authorities",
        options_for_select(performer_authorities.select_active_options),
        class: 'form-control image_performer',
        data: {
          'authority-select' => "image_performer",
          'uses-controlled-vocab' => true
        },
        prompt: t('hyrax.records.edit_fields.performer.prompt')
  %>
</fieldset>
