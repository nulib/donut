<% illustrator_authorities = Hyrax::IllustratorAuthorities.new %>
<fieldset class="bordered form-group">
<%= f.input key,
  as: :controlled_vocabulary,
  placeholder: 'Search for an illustrator',
  input_html: {
    class: 'form-control',
    data: {
      'autocomplete-url' => "/authorities/search/getty/ulan",
      'autocomplete' => key
    }
  },
  ### Required for the ControlledVocabulary javascript:
  wrapper_html: {
    data: {
      'autocomplete-url' => "/authorities/search/getty/ulan",
      'field-name' => key
    }
  },
  required: f.object.required?(key) %>

  <label>Authority for Illustrator</label>

<%= select_tag "illustrator_authorities",
        options_for_select(illustrator_authorities.select_active_options),
        class: 'form-control image_illustrator',
        data: {
          'authority-select' => "image_illustrator",
          'uses-controlled-vocab' => true
        },
        prompt: t('hyrax.records.edit_fields.illustrator.prompt')
  %>
</fieldset>
