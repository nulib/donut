packages:
  yum:
    python26: []
files:
  "/etc/yum.repos.d/centos.repo":
    mode: "000755"
    owner: root
    group: root
    content: |
      [centos-base]
      name=CentOS-6 - Base
      mirrorlist=http://mirrorlist.centos.org/?release=6&arch=x86_64&repo=os
      baseurl=http://mirror.centos.org/centos/6/os/x86_64/
      gpgcheck=1
      gpgkey=http://mirror.centos.org/centos/RPM-GPG-KEY-CentOS-6
commands:
  01_prereqs:
    command: |
      yum install --enablerepo=epel --enablerepo=centos-base -y https://nul-repo-deploy.s3.amazonaws.com/packages/vips-8.6.2-1.amzn1.x86_64.rpm
